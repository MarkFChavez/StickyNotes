
.note {
  -webkit-box-shadow: #DDD 0px 1px 2px;
  position: relative;
  background-color: #F4F39E;
  border-color: #DEE184;
  margin: 1em 0px;
  padding: 1em 1em;
  -webkit-box-shadow: 0px 1px 3px rgba(0,0,0,0.25);
  -moz-box-shadow: 0px 1px 3px rgba(0,0,0,0.25);
  box-shadow: 0px 1px 3px rgba(0,0,0,0.25);
  font-family: 'Arial', 'Comic Sans';
  cursor: pointer;
}

.note .name {
	font-weight: bold;
}

#create-note {
	display: none;
	margin-top: 20px;
}


.note .note-creator {
  float: right;
  display: none;
}

.validation-errors {
	display: none;
}

.note-footer:first-letter {
  padding-left: 18px;
  font: italic 3em Georgia, "Times New Roman", Times, serif;
}

#notes-comments {
  margin: 1em 0px;
}