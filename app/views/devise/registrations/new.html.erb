<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  
  <% unless devise_error_messages!.empty? %>
	  <div class="alert alert-error">
	  	<%= devise_error_messages! %>
	  </div>
  <% end %>

  <%= f.label :email %>
  <div><%= f.email_field :email, :autofocus => true, placeholder:"#juandelacruz@yahoo.com" %></div>

  <%= f.label :password %>
  <div><%= f.password_field :password, placeholder:"#password" %></div>

  <%= f.label :password_confirmation %>
  <div><%= f.password_field :password_confirmation, placeholder:"#confirm-password" %></div>

  <div><%= f.submit "Sign up", {class:"btn"} %></div>
<% end %>

<%= render "devise/shared/links" %>
