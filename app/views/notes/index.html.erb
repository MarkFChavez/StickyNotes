
<div class="row-fluid">

	<div class="span12">
		<h1> Put on your Notes </h1>
		<hr />
	</div>

</div>

<div class="row-fluid">

	<div class="span4">
		<p class="lead"> Marked Notes </p>
		<div>
			<p> This feature is coming soon. </p>
		</div>
	</div>

	<div class="span5">
		
		<% if !@notes.empty? %>
			<% @notes.each do |note| %>
				<%= div_for note do %>
					<label class="note-creator label label-success"> noted by <%= note.noted_by %> </label>
					<p class="lead name"> <%= note.name %> </p>

					<div class="note-content">
						<%= note.description %>
					</div>
				<% end %>
			<% end %>
		<% else %>
			<div class="alert alert-warning">
				No notes available. <%= link_to "Create a note", new_note_path %>.
			</div>
		<% end %>

	</div>

</div>