
<div class="row-fluid">

	<div class="span12">
		<h1> Take Notes </h1>
		<hr />
	</div>

</div>

<% if notice %>
	<div class="alert alert-success">
		<%= notice %>
	</div>
<% end %>

<% if alert %>
	<div class="alert alert-error">
		<%= alert %>
	</div>
<% end %>


<div class="row-fluid">

	<div class="span12">
		<a id="toggle-form" href="#" class="btn"><i class="icon icon-asterisk"></i> Create Note!</a>

		<div id="create-note">
			
			<%= form_for(Note.new) do |f| %>
				<%= f.text_field :name, {placeholder:"#title",class:"span2 input-small"} %> <br />
				<%= f.text_area :description, {class:"span6 input-small textarea wysihtml5-editor placeholder",style:"height:200px",placeholder:"#putyournotehere"} %> <br />
				<%= f.text_field :noted_by, {placeholder:"#createdby",class:"span2 input-small"} %> <br />
				<%= button_tag type:"submit",class:"btn btn-primary" do %>
					<i class="icon icon-plus-sign icon-white"></i> Add Note
				<% end %>
			<% end %>
		</div>

		<hr />
	</div>

</div>

<div class="row-fluid">

	<div class="span4">
		<p class="lead"> Marked Notes </p>
		<div>
			<p> This feature is coming soon. </p>
		</div>
	</div>

	<div class="span5">
		
		<div id="notes-container">

			<%= render "note" %>

		</div>

	</div>

</div>